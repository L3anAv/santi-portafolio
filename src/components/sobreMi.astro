---
// SobreMi.astro
const { foto, nombre, descripcion } = Astro.props;
---

<div id="about-overlay" class="overlay"></div>

<aside id="about-panel" class="panel">
  <button id="close-about" class="close-btn" aria-label="Cerrar">&times;</button>

  <div class="content">
    <img src={foto} alt={nombre} class="profile-img" />
    <h2 class="name">{nombre}</h2>
    <div class="divider"></div>
    <p class="description">{descripcion}</p>
  </div>
</aside>

<script>
  function initAbout() {
    const panel = document.getElementById('about-panel');
    const overlay = document.getElementById('about-overlay');
    const closeBtn = document.getElementById('close-about');

    if (!panel || !overlay) return; // Seguridad para el build

    const openPanel = () => {
      panel.classList.add('is-active');
      overlay.classList.add('is-active');
      document.body.style.overflow = 'hidden';
    };

    const closePanel = () => {
      panel.classList.remove('is-active');
      overlay.classList.remove('is-active');
      document.body.style.overflow = '';
      if (window.location.pathname === '/sobre-mi') {
        window.history.pushState({}, '', '/');
      }
    };

    const handleNavigation = (e) => {
      const link = e.target.closest('a');
      if (link && link.getAttribute('href') === '/sobre-mi') {
        e.preventDefault();
        window.history.pushState({}, '', '/sobre-mi');
        openPanel();
      }
    };

    // Eventos de botones
    closeBtn?.addEventListener('click', closePanel);
    overlay?.addEventListener('click', closePanel);
    document.addEventListener('click', handleNavigation);

    // Popstate para el botón atrás
    window.addEventListener('popstate', () => {
      window.location.pathname === '/sobre-mi' ? openPanel() : closePanel();
    });

    // Check inicial
    if (window.location.pathname === '/sobre-mi') openPanel();
  }

  // Se ejecuta en la carga inicial y en cada transición de página
  document.addEventListener('astro:page-load', initAbout);
</script>

<style>
  /* Overlay - Fondo oscuro */
  .overlay {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 60;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
    backdrop-filter: blur(2px);
  }

  .overlay.is-active {
    opacity: 1;
    pointer-events: auto;
  }

 /* El Panel Lateral */
  .panel {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 35%;
    background-color: white;
    z-index: 70;
    box-shadow: 10px 0 30px rgba(0, 0, 0, 0.1);
    transform: translateX(-100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 2.5rem 1.5rem;
    display: flex;
    flex-direction: column;

    /* AJUSTES PARA EL SCROLL */
    overflow-y: auto; /* Activa el scroll vertical solo si es necesario */
    overflow-x: hidden; /* Evita scrolls horizontales accidentales */

    /* Ocultar barra en Chrome, Safari y Edge */
  &::-webkit-scrollbar {
      display: none;
    }

    /* Ocultar barra en Firefox */
    scrollbar-width: none;

    /* Ocultar barra en Internet Explorer/Edge antiguo */
    -ms-overflow-style: none;
  }

  /* Contenido interno */
  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-top: 2rem;
    
    /* AJUSTE EXTRA */
    flex-shrink: 0; /* Evita que el contenido se "aplaste" para intentar caber */
    padding-bottom: 2rem; /* Espacio extra al final para que no quede pegado al borde */
  }

  .panel.is-active {
    transform: translateX(0);
  }

  /* Botón cerrar */
  .close-btn {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    font-size: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    color: #333;
    line-height: 1;
  }

  .profile-img {
    width: 70%;
    object-fit:cover;
    margin-bottom: 1.5rem;
  }

  .name {
    color: #111;
    font-weight: 700;
    font-family:'Source';
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
  }

  .divider {
    width: 40px;
    height: 3px;
    background-color: #3b82f6; /* Azul */
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 0.9rem;
    font-family:'SpaceMono';
    line-height: 1.6;
    color: #4b5563;
  }
</style>