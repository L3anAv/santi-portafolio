---
import Layout from '../layouts/Layout.astro';
import Menu from '../components/menu.astro';
import SobreMi from '../components/sobreMi.astro';

const menuItems ={
    sobremi: { href: '/sobre-mi', label: 'Sobre Mi'},
    servicios: { href: '/servicios', label: 'Servicios'},
    contacto: { href: 'https://wa.me/5491132855730?text=Hola!%20Vi%20tu%20portfolio%20y%20me%20gustar√≠a%20pedir%20presupuesto%20para:%20una/un%20SESION%20|EVENTO%20|SHOW%20|BOOK.', label: 'Contacto'}
};

const slideVertical = {
  forwards: {
    old: [{ name: 'subir-y-salir', duration: '0.6s', easing: 'ease' }],
    new: [{ name: 'subir-y-entrar', duration: '0.6s', easing: 'ease-in-out' }]
  },
  backwards: {
    old: [{ name: 'bajar-y-salir', duration: '0.6s', easing: 'ease' }],
    new: [{ name: 'bajar-y-entrar', duration: '0.6s', easing: 'ease-in-out' }]
  }
};
---

<Layout title="Santiago Claros | Inicio">
    <div transition:name="inicio" transition:animate={slideVertical}>
        <Menu menuItems={menuItems} />
        <div class="contenedor-imagenes">
            <figure>
                <img src={`${import.meta.env.BASE_URL}/images/1.jpg`} alt="" />
                <figcaption>Imagen 1</figcaption>
            </figure>
            <figure>
                <img src={`${import.meta.env.BASE_URL}/images/2.jpg`} alt="" />
                <figcaption>Imagen 2</figcaption>
            </figure>
            <figure>
                <img src={`${import.meta.env.BASE_URL}/images/4.jpg`} alt="" />
                <figcaption>Imagen 3</figcaption>
            </figure>
            <figure>
                <img src={`${import.meta.env.BASE_URL}/images/3.jpg`} alt="" />
                <figcaption>Imagen 4</figcaption>
            </figure>
             <div class="contenedor-boton">
				<a href={`${import.meta.env.BASE_URL}/galeria?type=photo`}>
				<button>
					Ver Galeria ->
				</button>
				</a>
		</div>
        </div>
        <div class="textos">
            <h3>Argentina, Buenos Aires</h3>
            <h1 class="texto-animado-snt"><span>.</span><span>S</span><span>T</span><span>C</span><span>L</span><span>R</span><span>S</span><span>/</span><span>/</span><span>2</span><span>4</span></h1>
        </div>
    </div>
    <SobreMi 
    nombre="Santiago Claros"
    foto="https://instagram.feze16-1.fna.fbcdn.net/v/t51.82787-15/608375312_18105112207666561_1989898877674025722_n.webp?_nc_cat=110&ig_cache_key=MzgwMDA3MjkzNTYzMzk1ODU1Nw%3D%3D.3-ccb7-5&ccb=7-5&_nc_sid=58cdad&efg=eyJ2ZW5jb2RlX3RhZyI6InhwaWRzLjE0NDB4MTgwMC5zZHIuQzMifQ%3D%3D&_nc_ohc=85weCVP9XOEQ7kNvwHHNWpI&_nc_oc=AdmliCSIaznCPfvLeUZv90BoQbx9FZbG-cO42oUI-RkdZ_BNf8V1PBGiBZNoVRsjECo&_nc_ad=z-m&_nc_cid=0&_nc_zt=23&_nc_ht=instagram.feze16-1.fna&_nc_gid=52427iVsJJWN5vlcz18AMQ&oh=00_AfqaLnvZODCycXk8fEcQn97UXdJv6C1usn7ag2rGRFmWOQ&oe=6980A081"
    descripcion="Fot√≥grafo/ Filmmaker  - Buenos Aires üåê Zona Norte"
    />
</Layout>

<style>

    .contenedor-boton{
		display: flex;
		justify-content: center;
		align-items: flex-end;
        grid-column: 4;
        position: relative;
        z-index: 100;
        pointer-events: none;
	}
    .contenedor-boton a{
        display: inline-block;
        pointer-events: auto;
        text-decoration: none;
        z-index: 101;
    }
	button{
		width:150px; /* Corregir */
        padding:5px;
		color:#fff;
		border:none;
		opacity: 0;
        margin-bottom:30px;
        cursor:pointer;
		font-family: "Tasa";
		font-weight: 400;
		font-size: 15px; /* corregir */
		border-radius:45px;
		text-align: center;
		background:#202020;
        display: inline-block;
        scale:1.5;
		animation: 1.6s EntradaAbajoBoton forwards;
		animation-delay: 1.5s;
	}
    
    button:hover{
		cursor:pointer;
		background:#404040;
	}

    div{
        display: grid;
        grid-template-rows: 10vh 65vh 15vh;
        grid-template-columns:repeat(3, 1fr);
    }

    .contenedor-imagenes{
        grid-row:2;
        grid-column: 1/4;
        display: grid;
        grid-gap:20px;
        grid-template-columns: .5% repeat(4, 1fr) .5%;
    }

    .contenedor-imagenes figure{
        all:unset;
        z-index:1;
        width:100%;
        position:relative;
        opacity: 0;
        animation: entradaImagenes 2s forwards;
    }

    .contenedor-imagenes figure figcaption{
        font-size:12px;
        color:#f4f4f4;
        user-select: none;
        font-family: 'Source';
        transition:all 0.5s ease-in-out;
    }
    
    .contenedor-imagenes:hover img{
        filter: grayscale(100%);
    }

    .contenedor-imagenes figure:hover img{
        filter: grayscale(0);
    }

    .contenedor-imagenes img{
        all:unset;
        width:90%;
        margin-top:-5%;
        object-fit:cover;
        transition:all 0.5s;
    }
    .contenedor-imagenes figure img:hover + figcaption{
        color:white;
        margin-left:20px;
        font-size:20px;
        transform: scale(1.1) translateY(-20px);
    }

    .contenedor-imagenes img:hover{
        z-index:2;
        cursor:none;
        object-fit:cover;
        transform: scale(1.1);
    }

    .contenedor-imagenes figure:nth-child(1){
        grid-column: 2;
        margin-top:15vh;
        animation-delay: 0.2s;
    }

    .contenedor-imagenes figure:nth-child(2){
        grid-column: 3;
        margin-top:22vh;
        transition:all .5s;
        animation-delay: 0.5s;
    }

    .contenedor-imagenes figure:nth-child(3){
        grid-column: 4;
        margin-top:2vh;
        transition:all .5s;
        animation-delay: 0.5s;
    }

    .contenedor-imagenes figure:nth-child(4){
        grid-column: 5;
        margin-top:10vh;
        transition:all .5s;
        animation-delay: 1s;
    }

    .textos{
        grid-row:3;
        grid-column:2/5;
        opacity: 0;
        display: flex;
        line-height: 1.1;
        align-items: end;
        margin-top:18%;
        justify-content: end;
        flex-direction: column;
        animation:EntradaInferior 1.2s forwards;
        animation-delay: 1s;
        pointer-events: none;
    }

    .textos h3{
        z-index:2;
        font-size: 12px;
        margin-right:2%;
        font-family:"SpaceMono";
        pointer-events: auto;
    }

    .textos h1{
        z-index:1;
        font-size:95px;
        user-select: none;
        font-family: "SpaceMono";
        pointer-events: auto;
    }

    /* Texto animacion */
    .texto-animado-snt{
        display: inline-block;
    }

    .texto-animado-snt span{
        display: inline-block;
        transform: translateY(100%);
        animation: subir-letra .5s forwards;
        animation-delay: 1s;
    }

    @keyframes subir-letra {
        to {
            transform: translateY(0); /* Las letras terminan en su posici√≥n original */
        }
    }

    .texto-animado-snt span:nth-child(1) { animation-delay: 0.2s; }
    .texto-animado-snt span:nth-child(2) { animation-delay: 0.4s; }
    .texto-animado-snt span:nth-child(3) { animation-delay: 0.6s; }
    .texto-animado-snt span:nth-child(4) { animation-delay: 0.8s; }
    .texto-animado-snt span:nth-child(5) { animation-delay: 1s; }
    .texto-animado-snt span:nth-child(6) { animation-delay: 1.2s; }
    .texto-animado-snt span:nth-child(7) { animation-delay: 1.4s; }
    .texto-animado-snt span:nth-child(8) { animation-delay: 1.8s; }
    .texto-animado-snt span:nth-child(9) { animation-delay: 2s; }
    .texto-animado-snt span:nth-child(10) { animation-delay: 2.2s; }
    .texto-animado-snt span:nth-child(11) { animation-delay: 2.4s; }
    .texto-animado-snt span:nth-child(12) { animation-delay: 2.8s; }

</style>