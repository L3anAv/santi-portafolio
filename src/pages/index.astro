---
import Layout from '../layouts/Layout.astro';
import miVideo from '../assets/video.webm';

/* Transitions */
const slideVertical = {
  forwards: {
    old: [{ name: 'subir-y-salir', duration: '0.6s', easing: 'ease' }],
    new: [{ name: 'subir-y-entrar', duration: '0.6s', easing: 'ease-in-out' }]
  },
  backwards: {
    old: [{ name: 'bajar-y-salir', duration: '0.6s', easing: 'ease' }],
    new: [{ name: 'bajar-y-entrar', duration: '0.6s', easing: 'ease-in-out' }]
  }
};

---

<Layout title="Santiago Claros | Audiovisual">
	<div class="Contenedor-textos-principal" transition:animate={slideVertical} transition:name="inicio" >
		<section>
			<div class="contenedor-textos-secundario">

				<div class="contenedor-redes">
					<svg xmlns='http://www.w3.org/2000/svg' width='50px' height='50px' viewBox='0 0 24 24'><g fill='none'><path d='M24 0v24H0V0zM12.593 23.258l-.011.002-.071.035-.02.004-.014-.004-.071-.035c-.01-.004-.019-.001-.024.005l-.004.01-.017.428.005.02.01.013.104.074.015.004.012-.004.104-.074.012-.016.004-.017-.017-.427c-.002-.01-.009-.017-.017-.018m.265-.113-.013.002-.185.093-.01.01-.003.011.018.43.005.012.008.007.201.093c.012.004.023 0 .029-.008l.004-.014-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014-.034.614c0 .012.007.02.017.024l.015-.002.201-.093.01-.008.004-.011.017-.43-.003-.012-.01-.01z'/><path fill='#202020FF' d='M16 3a5 5 0 0 1 5 5v8a5 5 0 0 1-5 5H8a5 5 0 0 1-5-5V8a5 5 0 0 1 5-5zm-4 5a4 4 0 1 0 0 8 4 4 0 0 0 0-8m0 2a2 2 0 1 1 0 4 2 2 0 0 1 0-4m4.5-3.5a1 1 0 1 0 0 2 1 1 0 0 0 0-2'/></g></svg>
					<svg xmlns='http://www.w3.org/2000/svg' width='50px' height='50px' viewBox='0 0 24 24'><g fill='none' fill-rule='evenodd'><path d='M24 0v24H0V0zM12.594 23.258l-.012.002-.071.035-.02.004-.014-.004-.071-.036c-.01-.003-.019 0-.024.006l-.004.01-.017.428.005.02.01.013.104.074.015.004.012-.004.104-.074.012-.016.004-.017-.017-.427c-.002-.01-.009-.017-.016-.018m.264-.113-.014.002-.184.093-.01.01-.003.011.018.43.005.012.008.008.201.092c.012.004.023 0 .029-.008l.004-.014-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014-.034.614c0 .012.007.02.017.024l.015-.002.201-.093.01-.008.003-.011.018-.43-.003-.012-.01-.01z'/><path fill='#202020FF' d='M8 4.5a4.5 4.5 0 0 1 3.354 7.5A4.5 4.5 0 0 1 8 19.5H4A2.5 2.5 0 0 1 1.5 17V7A2.5 2.5 0 0 1 4 4.5zm9.5 4c2.943 0 5 2.657 5 5.5a1.5 1.5 0 0 1-1.356 1.493L21 15.5h-.496a1.5 1.5 0 0 1 1.019 2.598c-.896.833-2.186 1.402-4.023 1.402-2.943 0-5-2.657-5-5.5s2.057-5.5 5-5.5m-9.5 5H4.5v3H8a1.5 1.5 0 0 0 .144-2.993zm12.496 2H15.9c.397.645 1.028 1 1.6 1 1.163 0 1.698-.337 1.977-.598a1.495 1.495 0 0 1 1.018-.402m-2.996-4c-.572 0-1.203.355-1.6 1h3.2c-.397-.645-1.028-1-1.6-1M8 7.5H4.5v3H8a1.5 1.5 0 1 0 0-3m11-2a1.5 1.5 0 0 1 0 3h-3a1.5 1.5 0 0 1 0-3z'/></g></svg>
				</div>

				<div class="textos">
					<h3>DOMINANDO LA NARRATIVA VISUAL</h3>
					<h1 class="titulo-principal">./SANTIAGO CLAROS</h1>
					<h3>TUS HISTORIAS, MI LENTE</h3>
				</div>
			</div>
			<div class="contenedor-boton">
				<a href="/inicio" data-astro-transition="forwards">
				<button>
					~~~~~>
				</button>
				</a>
			</div>
		</section>
		<aside>
			<video transition:persist width="100%" height="100%" muted autoplay loop>
				<source src={miVideo} type="video/webm"/>
			</video>
		</aside>
	</div>
</Layout>

<style>
	.Contenedor-textos-principal{
		display: grid;
		overflow: hidden;
		place-items: center;
		background:#f4f4f4;
		grid-template-rows: 100vh;
		grid-template-columns: 62.92% auto;
	}

	.contenedor-textos-secundario{
		display: flex;
		user-select: none;
	}
	
	.contenedor-redes{
		display: flex;
		margin-top:15%;
		margin-left:30px;
		align-items: center;
		flex-direction: column;
	}

	.contenedor-redes svg{
		margin:10px;
		transform:translateX(-200%);
		animation:1s EntradaRedes forwards;
	}
	
	.contenedor-redes svg g path{
		transition:0.5s fill pointer;
	}

	.contenedor-redes svg g path:hover{
		cursor:pointer;
		fill:#404040;
	}

	.textos{
		display:flex;
		text-align: center;
		align-items: center;
		flex-direction: column;
		justify-content: center;
	}

	.textos h1{
		font-size: clamp(2.5rem, 1.4815rem + 5.4321vw, 7.5rem);
		font-weight: 600;
		font-family: "Source";
		animation:1s EntradaTexto;
	}

	.textos h3{
		opacity:0;
		display: block;
		font-size: clamp(0.781rem, 0.6362rem + 0.7723vw, 1.563rem);
		font-family: "Tasa";
		animation: 2s EntradaApoyosTexto forwards;
	}
	.contenedor-boton{
		display: flex;
		justify-content: center;
		align-items: center;
	}
	button{
		width:320px; /* Corregir */
		color:#fff;
		border:none;
		opacity: 0;
		margin-top:25px;
		margin-left:120px;
		font-family: "Tasa";
		font-weight: 400;
		font-size: 50px; /* corregir */
		border-radius:45px;
		padding-right:5%;
		text-align: right;
		background:#202020;
		animation: 0.5s EntradaAbajoBoton forwards;
		transition: 1s background;
	}

	button:hover{
		cursor:pointer;
		background:#404040;
	}

	section{
		grid-row:1;
		grid-column: 1;
		
	}
	aside{
		grid-row:1;
		opacity: 0;
		grid-column: 2;
		animation:1s VideoAparicion forwards;
	}
</style>
